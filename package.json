{
  "name": "vlockster",
  "version": "0.1.0",
  "private": true,
  "description": "Netflix + Kickstarter + Skool para cine independiente",
  "author": "Alan Nadal",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack -p 3009",
    "build": "next build",
    "start": "next start -p 3009",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "supabase:types": "supabase gen types typescript --project-id $NEXT_PUBLIC_SUPABASE_PROJECT_ID > types/database.types.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:all": "vitest --coverage && playwright test",
    "analyze-bundle": "ANALYZE=true next build",
    "deploy:prod": "tsx scripts/deploy-production.ts",
    "deploy:prod:bash": "bash scripts/deploy-production.sh",
    "bmad:refresh": "npx bmad-method install -f -d .",
    "bmad:list": "echo 'See AGENTS.md for complete agent directory' && cat AGENTS.md | head -20",
    "bmad:validate": "echo 'BMAD-METHOD installed. Check .bmad-core/ directory and AGENTS.md for agent information'"
  },
  "dependencies": {
    "@paypal/react-paypal-js": "^8.1.3",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.86.2",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.7",
    "@vercel/analytics": "^1.6.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "isomorphic-dompurify": "^2.33.0",
    "lucide-react": "^0.555.0",
    "next": "^15.5.7",
    "react": "^19.0.1",
    "react-dom": "^19.0.1",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@next/bundle-analyzer": "^16.0.7",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "eslint": "^9",
    "eslint-config-next": "^15.5.7",
    "jsdom": "^27.2.0",
    "playwright": "^1.57.0",
    "prettier": "^3.2.4",
    "supabase": "^1.142.2",
    "tailwindcss": "^4.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": "20.x",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
